@model RegisterViewModel
<div class="container text-center w-50">
    <h1 class="display-6 text-primary">Kayıt Ol</h1>
    <hr />
    <form
        asp-area=""    
        asp-controller="Account"
        asp-action="Register"
        method="post"
    >
        <div class="row">
            <div class="col-md-12 text-danger" asp-validation-summary="All"></div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="FirstName"></label>
                    <input class="form-control" asp-for="FirstName" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="LastName"></label>
                    <input class="form-control" asp-for="LastName" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="UserName"></label>
                    <input class="form-control" asp-for="UserName" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="RePassword"></label>
                    <input class="form-control" asp-for="RePassword" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="d-grid mt-4 w-50 mx-auto">
                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                </div>
                
            </div>
        </div>
    </form>
</div>