@model List<Book>

@section Styles{
    @await Html.PartialAsync("_DataTablesCssPartial")
}
<div class="container-fluid">


<div class="row mb-3">
    <div class="col-md-6">
        <h1 class="display-6 text-danger text-center text-md-start">Kitapları Yönet</h1>
    </div>
    <div class="col-md-6 text-start text-md-end d-grid d-md-block">
        <a 
            asp-area="Admin"
            asp-controller="Book"
            asp-action="Create"
            class="btn btn-primary">Kitap Ekle</a>
    </div>
</div>


<table id="myTable" class="table table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Resim</td>
            <td>Kitap</td>
            <td>Fiyat</td>
            <td>Stok Miktarı</td>
            <td width="160">İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var b in Model)
        {
            <tr>
                <td>@b.Id</td>
                <td>
                    <img src="~/images/books/@b.ImageUrl" width="30" />
                </td>
                <td>@b.Name</td>
                <td>@b.Price</td>
                <td>@b.Stock</td>
                <td>
                    <a 
                        class="btn btn-warning btn-sm" 
                        asp-area="Admin" 
                        asp-controller="Book" 
                        asp-action="Edit" 
                        asp-route-id="@b.Id">Düzenle</a>

                    <a class="btn btn-danger btn-sm"
                       asp-area="Admin"
                       asp-controller="Book"
                       asp-action="Delete"
                       asp-route-id="@b.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
@section Scripts {
    @await Html.PartialAsync("_DataTablesScriptPartial")
}

