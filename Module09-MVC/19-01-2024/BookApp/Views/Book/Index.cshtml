@using BookApp.Models.Entities.Concrete;
@model List<Book>


<div class="text-center">
    <h1 class="display-4">Kitaplar</h1>
    <div class="container mt-4">
        <div class="row">
            @foreach (var b in Model)
            {
                <div class="col">
                    <div class="card">
                        <img src="~/images/books/@b.ImageUrl" height="250" width="200" class="m-auto my-4" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@b.Name</h5>
                            <p class="card-text">@b.Abstract.Substring(0, 50))</p>
                            <p class="card-text text-success fw-bold">@b.Price₺</p>
                            <a href="#" class="btn btn-primary">Sepete Ekle</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
