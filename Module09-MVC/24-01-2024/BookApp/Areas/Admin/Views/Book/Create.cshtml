@model Book
<div class="container w-50">
    <h1 class="display-6 text-primary">Yeni Kitap Ekleme Formu</h1>
    <hr />
    <form
          asp-area="Admin"
          asp-controller="Book"
          asp-action="Create"
          method="post"
    >   
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input class="form-control" asp-for="Name"  />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label" asp-for="ImageUrl"></label>
                <input class="form-control" asp-for="ImageUrl" />
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label" asp-for="Stock"></label>
                <input class="form-control" asp-for="Stock" />
                <span class="text-danger" asp-validation-for="Stock"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label" asp-for="Price"></label>
                <input class="form-control" asp-for="Price" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label class="form-label" asp-for="PageCount"></label>
                <input class="form-control" asp-for="PageCount" />
                <span class="text-danger" asp-validation-for="PageCount"></span>
            </div>
            <div class="col-md-12 mb-3">
                <label class="form-label" asp-for="Abstract"></label>
                <textarea asp-for="Abstract" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Abstract"></span>
            </div>
            <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsHome" >
                    <label asp-for="IsHome" class="form-check-label" for="flexCheckDefault"></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsActive">
                    <label class="form-check-label" for="flexCheckDefault">
                        Aktif Kitap
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success mt-3">Kaydet</button>
    </form>
</div>