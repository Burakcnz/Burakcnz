@using BookApp.Models.Entities.Concrete;
@model List<Book>
<div class="text-center">
    <h1 class="display-6 text-primary">Tüm Kitaplarımız</h1>
    <div class="container mt-4">
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
                    <div class="card">
                        <img src="~/images/books/@book.ImageUrl" height="250" width="170" class="m-auto my-4" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@book.Name</h5>
                            <p class="card-text">@book.Abstract.Substring(0, 50)</p>
                            <p class="card-text text-success fw-bold">@book.Price</p>
                            <a href="#" class="btn btn-primary">Sepete Ekle</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
